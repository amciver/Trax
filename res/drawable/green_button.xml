<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#ff47ef6a"/>
            <stroke
                    android:width="1dp"
                    android:color="#ff369946"/>
            <corners
                    android:radius="6dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#ff47ef6a"
                    android:endColor="#ff369946"
                    android:angle="270"/>
            <stroke
                    android:width="1dp"
                    android:color="#ff369946"/>
            <corners
                    android:radius="6dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
        </shape>
    </item>
</selector>