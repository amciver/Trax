<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dropsite_parent_layout"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="4dp"
              android:paddingTop="4dp"
              android:paddingRight="4dp"
              android:paddingBottom="4dp"
              android:orientation="horizontal">
    <ImageView
            android:id="@+id/cityofphoenix"
            android:visibility="gone"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_gravity="left"
            android:src="@drawable/az_phoenix"/>
    <ImageView
            android:id="@+id/cityofmesa"
            android:visibility="gone"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_gravity="left"
            android:src="@drawable/az_mesa"/>
    <ImageView
            android:id="@+id/cityofglendale"
            android:visibility="gone"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/az_glendale"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">
        <TextView android:id="@+id/dropsite_location"
                  android:textColor="#7D7D7D"
                  android:textStyle="bold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/not_available"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView android:id="@+id/dropsite_hours_open"
                      android:textColor="#7D7D7D"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal|top"/>
            <TextView
                    android:id="@+id/dropsite_time_seperator"
                    android:textColor="#7D7D7D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:visibility="gone"/>
            <TextView android:id="@+id/dropsite_hours_close"
                      android:textColor="#7D7D7D"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>